<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group4softwareengineer.dmhelper" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CharacterSheet"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EditHealthPopup"
            android:label="@string/title_activity_edit_health_popup"
            android:parentActivityName=".CharacterSheet"
            android:theme="@style/AppTheme.popup" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group4softwareengineer.dmhelper.CharacterSheet" />
        </activity>
        <activity
            android:name=".EditXpPopup"
            android:label="@string/title_activity_edit_xp_popup"
            android:parentActivityName=".CharacterSheet"
            android:theme="@style/AppTheme.popup" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group4softwareengineer.dmhelper.CharacterSheet" />
        </activity>
        <activity
            android:name=".LoadNewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewAdventureActivity"
            android:label="@string/title_activity_new_adventure" >
        </activity>
    </application>

</manifest>
