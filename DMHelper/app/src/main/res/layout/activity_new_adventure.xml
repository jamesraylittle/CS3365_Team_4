<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group4softwareengineer.dmhelper.NewAdventureActivity"
    android:background="#D4A06A">

    <TextView android:text="Number of players: 5" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Testtext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Player"
        android:id="@+id/add_player_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="addPlayer"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Monster"
        android:id="@+id/add_monster_button"
        android:layout_alignTop="@+id/add_player_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Player One"
        android:id="@+id/playerOne"
        android:layout_below="@+id/Testtext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:onClick="showCharacterSheet"
        android:background="#D4B56A"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Player Two"
        android:id="@+id/playerTwo"
        android:layout_below="@+id/playerOne"
        android:layout_alignParentStart="true"
        android:onClick="showCharacterSheet"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Player Three"
        android:id="@+id/playerThree"
        android:layout_below="@+id/playerTwo"
        android:layout_alignParentStart="true"
        android:onClick="showCharacterSheet"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Player Four"
        android:id="@+id/playerFour"
        android:layout_below="@+id/playerThree"
        android:layout_alignParentStart="true"
        android:onClick="showCharacterSheet"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Player Five"
        android:id="@+id/playerFive"
        android:layout_below="@+id/playerFour"
        android:layout_alignParentStart="true"
        android:onClick="showCharacterSheet"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Monster One"
        android:id="@+id/monsterOne"
        android:layout_alignTop="@+id/playerOne"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Monster Two"
        android:id="@+id/monsterTwo"
        android:layout_below="@+id/monsterOne"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/attack"
        android:layout_alignTop="@+id/playerOne"
        android:layout_toEndOf="@+id/playerOne" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button"
        android:layout_below="@+id/playerOne"
        android:layout_toEndOf="@+id/playerTwo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/playerThree"
        android:layout_toEndOf="@+id/playerThree" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button3"
        android:layout_below="@+id/playerThree"
        android:layout_toEndOf="@+id/playerFour" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/playerFive"
        android:layout_toEndOf="@+id/playerFive" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button5"
        android:layout_below="@+id/attack"
        android:layout_toEndOf="@+id/playerOne" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button6"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/playerTwo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button7"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/playerThree" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button8"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/playerFour" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button9"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/playerFive" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/monsterOne"
        android:layout_toStartOf="@+id/monsterOne" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="A"
        android:id="@+id/button11"
        android:layout_above="@+id/button6"
        android:layout_toStartOf="@+id/monsterTwo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button12"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="D"
        android:id="@+id/button13"
        android:layout_below="@+id/button11"
        android:layout_toStartOf="@+id/monsterTwo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Turn"
        android:id="@+id/button14"
        android:onClick="addPlayer"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/monsterTwo" />

</RelativeLayout>