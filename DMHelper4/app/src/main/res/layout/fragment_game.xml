<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D4A06A"
    android:id="@+id/tempTest5">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Player One"
                android:id="@+id/playerOne"
                android:layout_alignParentStart="true"
                android:layout_marginTop="27dp"
                android:onClick="showCharacterSheet"
                android:background="#D4B56A"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Player Two"
                android:id="@+id/playerTwo"
                android:layout_below="@+id/playerOne"
                android:layout_alignParentStart="true"
                android:onClick="showCharacterSheet"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Player Three"
                android:id="@+id/playerThree"
                android:layout_below="@+id/playerTwo"
                android:layout_alignParentStart="true"
                android:onClick="showCharacterSheet"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Player Four"
                android:id="@+id/playerFour"
                android:layout_below="@+id/playerThree"
                android:layout_alignParentStart="true"
                android:onClick="showCharacterSheet"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Player Five"
                android:id="@+id/playerFive"
                android:layout_below="@+id/playerFour"
                android:layout_alignParentStart="true"
                android:onClick="showCharacterSheet"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Turn"
                android:id="@+id/button14"
                android:onClick="addPlayer"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Monster"
                android:id="@+id/add_monster_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </TableRow>
    </TableLayout>


</LinearLayout>

