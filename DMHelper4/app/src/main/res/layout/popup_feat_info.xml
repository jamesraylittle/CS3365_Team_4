<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="#000000"
    android:padding="2dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:background="@color/background_material_light">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info_feat_name"
                android:id="@+id/info_feat_name"
                android:layout_gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:paddingBottom="5dp" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_weight="1"
                android:layout_below="@+id/info_feat_name">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:paddingBottom="7dp"
                    android:layout_below="@+id/info_feat_name"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: "
                        android:id="@+id/lbl_info_feat_type"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_type"
                        android:id="@+id/info_feat_type"
                        android:layout_alignTop="@+id/lbl_info_feat_type"
                        android:layout_toEndOf="@+id/lbl_info_feat_type"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiple: "
                        android:id="@+id/lbl_info_feat_multiple"
                        android:layout_below="@+id/info_feat_type"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_multiple"
                        android:id="@+id/info_feat_multiple"
                        android:layout_alignTop="@+id/lbl_info_feat_multiple"
                        android:layout_toEndOf="@+id/lbl_info_feat_multiple"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stack: "
                        android:id="@+id/lbl_info_feat_stack"
                        android:layout_below="@+id/info_feat_multiple"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_stack"
                        android:id="@+id/info_feat_stack"
                        android:layout_alignTop="@+id/lbl_info_feat_stack"
                        android:layout_toEndOf="@+id/lbl_info_feat_stack"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choice: "
                        android:id="@+id/lbl_info_feat_choice"
                        android:layout_below="@+id/info_feat_stack"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_choice"
                        android:id="@+id/info_feat_choice"
                        android:layout_alignTop="@+id/lbl_info_feat_choice"
                        android:layout_toEndOf="@+id/lbl_info_feat_choice"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prereq: "
                        android:id="@+id/lbl_info_feat_prereq"
                        android:layout_below="@+id/info_feat_choice"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_prereq"
                        android:id="@+id/info_feat_prereq"
                        android:layout_alignTop="@+id/lbl_info_feat_prereq"
                        android:layout_toEndOf="@+id/lbl_info_feat_prereq"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal: "
                        android:id="@+id/lbl_info_feat_normal"
                        android:layout_below="@+id/info_feat_prereq"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_normal"
                        android:id="@+id/info_feat_normal"
                        android:layout_alignTop="@+id/lbl_info_feat_normal"
                        android:layout_toEndOf="@+id/lbl_info_feat_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special: "
                        android:id="@+id/lbl_info_feat_special"
                        android:layout_below="@+id/info_feat_normal"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_feat_special"
                        android:id="@+id/info_feat_special"
                        android:layout_alignTop="@+id/lbl_info_feat_special"
                        android:layout_toEndOf="@+id/lbl_info_feat_special"
                        android:textSize="14sp" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:text="Close"
                    android:onClick="doCloseFeatInfoPopup"
                    android:id="@+id/popup_item_close"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/background_material_light"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:text="Add"
                    android:onClick="doAddFeat"
                    android:id="@+id/popup_item_select"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/background_material_light"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>