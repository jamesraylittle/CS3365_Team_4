<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    tools:context="group4.dmhelper.Activities.Popups.PopupEditExperience">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/layout"
        android:elevation="10dp"
        android:background="@color/background_material_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Edit Experience:"
            android:editable="false"
            android:id="@+id/txt_experience"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Change Experience:"
                android:editable="false"
                android:id="@+id/txt" />

            <EditText
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/healthchange" />
        </LinearLayout>

        <Button
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_submit_experience"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.09" />


    </LinearLayout>
</RelativeLayout>
