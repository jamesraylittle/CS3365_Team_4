<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group4.dmhelper.Activities.CharacterSheet.ActivityCharacterRacialClass">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Info"
                android:id="@+id/txt_char_classinfo_title"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="3.5dp"
            android:id="@+id/bar_char_spells" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".15">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView_char_classinfo" >

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:paddingBottom="7dp"
                    android:layout_below="@+id/info_feat_name"
                    android:layout_alignParentStart="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: "
                        android:id="@+id/lbl_char_class_type"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_type"
                        android:id="@+id/txt_char_class_type"
                        android:layout_alignTop="@+id/lbl_char_class_type"
                        android:layout_toEndOf="@+id/lbl_char_class_type"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alignment: "
                        android:id="@+id/lbl_char_class_alignment"
                        android:layout_below="@+id/txt_char_class_type"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_alignment"
                        android:id="@+id/txt_char_class_alignment"
                        android:layout_alignTop="@+id/lbl_char_class_alignment"
                        android:layout_toEndOf="@+id/lbl_char_class_alignment"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hit Dice:"
                        android:id="@+id/lbl_char_class_hitdice"
                        android:layout_below="@+id/txt_char_class_alignment"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_hitdice"
                        android:id="@+id/txt_char_class_hitdice"
                        android:layout_alignTop="@+id/lbl_char_class_hitdice"
                        android:layout_toEndOf="@+id/lbl_char_class_hitdice"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skill Points:"
                        android:id="@+id/lbl_char_class_skillpoints"
                        android:layout_below="@+id/txt_char_class_hitdice"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_skillpoints"
                        android:id="@+id/txt_char_class_skillpoints"
                        android:layout_alignTop="@+id/lbl_char_class_skillpoints"
                        android:layout_toEndOf="@+id/lbl_char_class_skillpoints"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spell Type:"
                        android:id="@+id/lbl_char_class_spelltype"
                        android:layout_below="@+id/txt_char_class_skillpoints"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_spelltype"
                        android:id="@+id/txt_char_class_spelltype"
                        android:layout_alignTop="@+id/lbl_char_class_spelltype"
                        android:layout_toEndOf="@+id/lbl_char_class_spelltype"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Race:"
                        android:id="@+id/lbl_char_class_reqrace"
                        android:layout_below="@+id/txt_char_class_spelltype"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqrace"
                        android:id="@+id/txt_char_class_reqrace"
                        android:layout_alignTop="@+id/lbl_char_class_reqrace"
                        android:layout_toEndOf="@+id/lbl_char_class_reqrace"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Skills:"
                        android:id="@+id/lbl_char_class_reqskill"
                        android:layout_below="@+id/txt_char_class_reqrace"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqskill"
                        android:id="@+id/txt_char_class_reqskill"
                        android:layout_alignTop="@+id/lbl_char_class_reqskill"
                        android:layout_toEndOf="@+id/lbl_char_class_reqskill"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Feats:"
                        android:id="@+id/lbl_char_class_reqfeat"
                        android:layout_below="@+id/txt_char_class_reqskill"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqfeat"
                        android:id="@+id/txt_char_class_reqfeat"
                        android:layout_alignTop="@+id/lbl_char_class_reqfeat"
                        android:layout_toEndOf="@+id/lbl_char_class_reqfeat"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Spells:"
                        android:id="@+id/lbl_char_class_reqspell"
                        android:layout_below="@+id/txt_char_class_reqfeat"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqspell"
                        android:id="@+id/txt_char_class_reqspell"
                        android:layout_alignTop="@+id/lbl_char_class_reqspell"
                        android:layout_toEndOf="@+id/lbl_char_class_reqspell"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Psionics:"
                        android:id="@+id/lbl_char_class_reqpsionic"
                        android:layout_below="@+id/txt_char_class_reqspell"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqpsionic"
                        android:id="@+id/txt_char_class_reqpsionic"
                        android:layout_alignTop="@+id/lbl_char_class_reqpsionic"
                        android:layout_toEndOf="@+id/lbl_char_class_reqpsionic"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Epic Feats:"
                        android:id="@+id/lbl_char_class_reqepic"
                        android:layout_below="@+id/txt_char_class_reqpsionic"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqepic"
                        android:id="@+id/txt_char_class_reqepic"
                        android:layout_alignTop="@+id/lbl_char_class_reqepic"
                        android:layout_toEndOf="@+id/lbl_char_class_reqepic"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Special:"
                        android:id="@+id/lbl_char_class_reqspecial"
                        android:layout_below="@+id/txt_char_class_reqepic"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_reqspecial"
                        android:id="@+id/txt_char_class_reqspecial"
                        android:layout_alignTop="@+id/lbl_char_class_reqspecial"
                        android:layout_toEndOf="@+id/lbl_char_class_reqspecial"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class Skills:"
                        android:id="@+id/lbl_char_class_classskills"
                        android:layout_below="@+id/txt_char_class_reqspecial"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_classskills"
                        android:id="@+id/txt_char_class_classskills"
                        android:layout_alignTop="@+id/lbl_char_class_classskills"
                        android:layout_toEndOf="@+id/lbl_char_class_classskills"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proficiencies:"
                        android:id="@+id/lbl_char_class_proficiencies"
                        android:layout_below="@+id/txt_char_class_classskills"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_proficiencies"
                        android:id="@+id/txt_char_class_proficiencies"
                        android:layout_alignTop="@+id/lbl_char_class_proficiencies"
                        android:layout_toEndOf="@+id/lbl_char_class_proficiencies"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Epic Feat Base Level:"
                        android:id="@+id/lbl_char_class_epicfeatbaselevel"
                        android:layout_below="@+id/txt_char_class_proficiencies"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_epicfeatbaselevel"
                        android:id="@+id/txt_char_class_epicfeatbaselevel"
                        android:layout_alignTop="@+id/lbl_char_class_epicfeatbaselevel"
                        android:layout_toEndOf="@+id/lbl_char_class_epicfeatbaselevel"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Epic Feat Interval:"
                        android:id="@+id/lbl_char_class_epicfeatinterval"
                        android:layout_below="@+id/txt_char_class_epicfeatbaselevel"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_epicfeatinterval"
                        android:id="@+id/txt_char_class_epicfeatinterval"
                        android:layout_alignTop="@+id/lbl_char_class_epicfeatinterval"
                        android:layout_toEndOf="@+id/lbl_char_class_epicfeatinterval"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Epic Feat List:"
                        android:id="@+id/lbl_char_class_epicfeatlist"
                        android:layout_below="@+id/txt_char_class_epicfeatinterval"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:textSize="14sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info_class_epicfeatlist"
                        android:id="@+id/txt_char_class_epicfeatlist"
                        android:layout_alignTop="@+id/lbl_char_class_epicfeatlist"
                        android:layout_toEndOf="@+id/lbl_char_class_epicfeatlist"
                        android:textSize="14sp" />
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
