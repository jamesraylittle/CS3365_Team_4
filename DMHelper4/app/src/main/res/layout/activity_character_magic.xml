<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="group4.dmhelper.Activities.CharacterSheet.ActivityCharacterMagic"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Spell"
                android:id="@+id/btn_search_Magic_CS"
                android:background="@color/colorButton"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Known Spells"
                android:id="@+id/txt_char_spells_title"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="3.5dp"
            android:id="@+id/bar_char_spells" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".15">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView_Magic"
                android:layout_centerHorizontal="true"
                android:background="#D4A06A"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
