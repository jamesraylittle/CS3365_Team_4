<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group4.dmhelper.Activities.CharacterSheet.ActivityCharacterInventory"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:id="@+id/btn_search_inventory_IT"
                android:background="@color/colorButton"
                android:scaleType="fitXY"
                android:layout_gravity="bottom|right"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:onClick="addInventoryItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_search_item"
            android:background="#000000"
            android:layout_marginTop="3.5dp"
            android:id="@+id/bar_char_inventory1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".3">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView_inventory_IT"
                android:headerDividersEnabled="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Add Equipment"
                android:id="@+id/btn_search_inventory_EQ"
                android:background="@color/colorButton"
                android:scaleType="fitXY"
                android:layout_gravity="bottom|right"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:onClick="addInventoryEquipment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment"
                android:id="@+id/textView4"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_search_item"
            android:background="#000000"
            android:layout_marginTop="3.5dp"
            android:id="@+id/bar_char_inventory3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".3">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView_inventory_EQ" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
