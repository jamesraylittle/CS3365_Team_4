<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group4.dmhelper" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.ActivityStart"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivityGame"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".Activities.ActivitySearchMonsters"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".Activities.ActivitySearchItems"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".Activities.ActivitySearchFeats"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".Activities.ActivitySearchSpells"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".Activities.ActivitySearchEquipment"
            android:label="Main Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".Popups.PopupMonsterInfo"
            android:label="Main Activity"
            android:theme="@style/AppTheme.PopupTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:noHistory="true">
        </activity>
    </application>

</manifest>
